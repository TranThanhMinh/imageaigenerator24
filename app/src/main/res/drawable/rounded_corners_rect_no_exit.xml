<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item>
        <shape>
            <gradient
                android:startColor="#f00dbe"
                android:endColor="#3771c8"
                android:angle="360"
                android:type="linear"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@android:color/transparent"/>
            <stroke
                android:width="0.5dp"
                android:color="@color/app_color_exit_btn"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>
</layer-list>
